<div class="box">
  <h2 class="box-title col-sm-6 col-sm-offset-3">編集画面</h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="form-group col-sm-7 col-sm-offset-3">
        <%= devise_error_messages! %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <strong><p>メールアドレス</p></strong>
        <%= f.email_field :email, autofocus: true, :class => "form-control" %>
      </div>
      
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <strong><p>現在のパスワード</p></strong>
        <%= f.password_field :current_password, autocomplete: "off",
                             :placeholder => "old password", :class => "form-control" %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <strong><p>新しいパスワード</strong> <i>( 半角英数字で入力して下さい )</i></p>
        <%= f.password_field :password, autocomplete: "off",
                             :placeholder => "new password", :class => "form-control" %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <strong><p>新しいパスワード確認</p></strong>
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             :placeholder => "new password confirmation", :class => "form-control" %>
      </div>
      
      <div class="submit-group col-sm-6 col-sm-offset-3 text-right">
        <%= link_to "戻る", :back, class: "btn btn-success" %>
        <%= f.submit "更新", class: "btn btn-success" %>
      </div>
    <% end %>

    <div class="form-group col-sm-6 col-sm-offset-3">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">アカウント削除</h2>
        </div>
        
        <div class="panel-body">
          このサービスを利用しない方は削除して下さい。
          <div class="submit-group text-right">
            <%= button_to "アカウント削除", registration_path(resource_name),
                                            data: { confirm: "本当に削除しますか?" },
                                            method: :delete,
                                            class: "btn btn-success" %>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
