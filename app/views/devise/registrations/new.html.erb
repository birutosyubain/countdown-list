<div class="box">
  <h2 class="box-title col-sm-6 col-sm-offset-3">新規登録</h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group col-sm-7 col-sm-offset-3">
        <%= devise_error_messages! %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.email_field :email, autofocus: true,
                          :placeholder => "Email", :class => "form-control" %>
      </div>

      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.password_field :password, autocomplete: "off",
                             :placeholder => "Password", :class => "form-control" %>
        <% if @minimum_password_length %>
          <em>( <%= @minimum_password_length %> 文字以上の半角英数字を入力して下さい )</em>
        <% end %>
      </div>
    
      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             :placeholder => "Password確認", :class => "form-control" %>
      </div>
    
      <div class="submit-group col-sm-6 col-sm-offset-3 text-right">
        <%= f.submit "登録", class: "btn btn-success" %>
      </div>

    <% end %>
    
    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>
