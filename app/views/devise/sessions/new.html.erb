<h2 class="box-title col-sm-6 col-sm-offset-3">ログイン</h2>
  <div class="box-inner">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group col-sm-7 col-sm-offset-3">
        <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
        <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
        <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.email_field :email, autofocus: true,
                          :placeholder => "Email", :class => "form-control" %>
      </div>
      
      <div class="form-group col-sm-6 col-sm-offset-3">
        <%= f.password_field :password, autocomplete: "off",
                             :placeholder => "Password", :class => "form-control" %>
      </div>
      
      <div class="submit-group col-sm-6 col-sm-offset-3 text-right">
        <%= link_to '戻る', :back, :class => "btn btn-success" %>
        <%= f.submit "ログイン", class: "btn btn-success" %>
      </div>
      
    <% end %>
  </div>
